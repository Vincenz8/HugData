<% let k = 0; %>
<% while (k < found.length) { %>
    <div class="row justify-content-center mb-4">
        <% for (let i = 0; i < 3 && k < found.length; i++) { %>
            <div class="col-md-4 d-flex justify-content-center mb-3">
                <section class="card" style="width: 20rem;">
                    <a href="/article/<%= found[k].id %>">
                        <img class="img-fluid" src="<%= found[k].pathImg.substring(6) %>" alt="" style="width: 100%; height: 200px; object-fit: cover;">
                    </a>
                    <div class="card-body p-3" onclick="location.href='/article/<%= found[k].id %>'">
                        <h2 class="card-title"><a href="/article/<%= found[k].id %>"><%= found[k].title %></a></h2>
                        <h4 class="card-text"><%= found[k].corpus.substring(0, 100) %></h4>
                        <hr>
                    </div>
                    <% if (ableDel) { %>
                        <div class="d-flex justify-content-center mb-3">
                            <button type="button" class="btn loved" data-type="<%= type %>" data-id="<%= found[k].id %>">X</button>                            
                        </div>
                    <% } %>
                </section>
                <% k++; %>
            </div>
        <% } %>
    </div>
<% } %>
