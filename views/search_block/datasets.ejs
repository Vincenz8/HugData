<% let k = 0; %>
<% while (k < found.length) { %>
    <div class="row justify-content-center mb-4">
        <% for (let i = 0; i < 3 && k < found.length; i++) { %>
            <div class="col-md-4 d-flex justify-content-center mb-3">
                <section class="card" style="width: 20rem;">
                    <a onclick="location.href='<%= found[k].dataset.pathData.substring(6) %>'">
                        <img class="img-fluid" src="<%= found[k].dataset.pathImg.substring(6) %>" alt="" style="width: 100%; height: 200px; object-fit: cover;">
                    </a>
                    <div class="card-body p-3" onclick="location.href='<%= found[k].dataset.pathData.substring(6) %>'">
                        
                        <h2 class="card-title">
                            <a onclick="location.href='<%= found[k].dataset.pathData.substring(6) %>'"><%= found[k].dataset.title %></a>
                        </h2>
                        <h4 class="card-text"><%= found[k].dataset.description.substring(0, 50) %></h4>
                        <hr>
                        <div class="metafooter d-flex align-items-center mt-2">
                            <div class="meta-footer-thumb me-2">
                                <a href="/creator/<%= found[k].creator.name %>/datasets">
                                    <img class="author-thumb" src="<%= found[k].creator.pathImg.substring(6) %>" alt="<%= found[k].creator.name %>">
                                </a>
                            </div>
                            <div class="author-meta">
                                <span class="post-name">
                                    <a href="/creator/<%= found[k].creator.name %>/datasets"><%= found[k].creator.name %></a>
                                </span><br/>
                            </div>
                        </div>
                    </div>
                </section>
                <% k++; %>
            </div>
        <% } %>
    </div>
<% } %>


